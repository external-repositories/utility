#include <iterator>

namespace utility{

/**
 * @brief Backtrack from an iterator to find the first character of a line.
 * @details 
 * Behavior is undefined if called upon an iterator positioned in the first line
 */
template< typename Iterator >
Iterator 
findLineBegin( Iterator positionIterator ){
  auto backtracker = std::make_reverse_iterator( positionIterator );
  while ( *(++backtracker) != '\n' );
  return backtracker.base();
}

}
