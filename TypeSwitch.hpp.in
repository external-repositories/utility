#ifndef UTILITY_TYPESWITCH_HPP
#define UTILITY_TYPESWITCH_HPP

#include "utility.hpp"

namespace utility{

/** 
 * @brief 
 * A helper struct providing an alias to the `Right` typename parameter when the
 * boolean `condition` parameter is false and to the `Left` typename parameter 
 * otherwise 
 */
template< typename Left, typename Right, bool condition >
struct TypeSwitch{
  using type = Left;
};

template< typename Left, typename Right >
struct TypeSwitch< Left, Right, false >{
  using type = Right;
};

}

#endif
